# editorconfig.org
root = true

[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

[*.{js, ts, scss, vue, html}]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4

[{package.json}]
indent_style = space
indent_size = 2
tab_width = 2

[*.md]
trim_trailing_whitespace = false
